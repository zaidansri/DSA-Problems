#include <bits/stdc++.h>

int lengthOfLongestConsecutiveSequence(vector<int> &arr, int n) {
    // Write your code here.
    sort(arr.begin(), arr.end());
    int c = 1;
    int maxc = 1;
    for (int i = 0; i<n-1; i++) {
        if (arr[i+1] - arr[i] == 1){
            c++;
            maxc = max (c, maxc);
        } 
        else if (arr[i+1] - arr[i] == 0){
            c=c;
            maxc = max (c, maxc);
        }
        else c = 1;
    }
    return maxc;
}
