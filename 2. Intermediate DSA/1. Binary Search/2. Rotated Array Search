
int search(int* arr, int n, int key) {
    // Write your code here.

    int hi = n-1;
    int lo = 0;

    while (lo<=hi){
        int mid = (lo + hi)/2;

        if (arr[mid] == key) {
            return mid;
        }
        else if (arr[lo] <= arr[mid]){
            if (arr[lo] <= key && arr[mid] >= key){
                hi = mid - 1;
            }
            else{
                lo = mid + 1;
            }
        }
        else {
            if (arr[hi] >= key && arr[mid] <= key){
                lo = mid + 1;
            }
            else{
                hi = mid - 1;
            }
        }
    }
    return -1;
}
