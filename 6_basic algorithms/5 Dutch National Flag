#include <bits/stdc++.h> 
void sort012(int *arr, int n)
{
   //   Write your code here
   int zero = 0, one = 0, two = 0,idx = 0;

   for (int i = 0; i<n; i++) {
      if (arr[i]==0) zero++;
      
      else if (arr[i]==1) one++;

      else if (arr[i] == 2) two++;
   }
   //cout << zero << one << two<< endl;
   for (int i = 0; i < zero; i++) {
      
        arr[idx++] = 0;
   }
   for (int i = 0; i < one; i++) {
       arr[idx++] = 1;
   }
   for (int i = 0; i < two; i++) {
      arr[idx++] = 2;
   }
}
